{
    "name": "kart8r",
    "version": "1.0.1",
    "author": "Michael Callaghan",
    "homepage": "http://www.walkingriver.com/",
    "description": "A 100% unauthorized character/kart/tire/glider randoizer utility for a famous cartoon racing game.",
    "private": true,
    "scripts": {
        "license-check": "license-checker --production --customPath customformat.json --json > src/assets/licenses.json",
        "clean": "ionic-app-scripts clean",
        "build": "ionic-app-scripts build",
        "lint": "ionic-app-scripts lint",
        "ionic:build": "ionic-app-scripts build",
        "ionic:serve": "ionic-app-scripts serve",
        "build:ios": "ionic cordova build ios --release",
        "sign:ios": "open platforms/ios/*.xcodeproj",
        "release:ios": "run-s -n build:ios sign:ios",
        "build:apk": "ionic cordova build android --release",
        "align:apk": "zipalign -f 4 platforms/android/build/outputs/apk/android-release-unsigned.apk platforms/android/build/outputs/apk/android-release-aligned.apk",
        "sign:apk": "make-dir ./releases && apksigner sign --ks ../wr.keystore --out releases/android-release-signed.apk platforms/android/build/outputs/apk/android-release-aligned.apk",
        "release:android": "run-s -n build:apk align:apk sign:apk"
    },
    "dependencies": {
        "@angular/common": "4.1.3",
        "@angular/compiler": "4.1.3",
        "@angular/compiler-cli": "4.1.3",
        "@angular/core": "4.1.3",
        "@angular/forms": "4.1.3",
        "@angular/http": "4.1.3",
        "@angular/platform-browser": "4.1.3",
        "@angular/platform-browser-dynamic": "4.1.3",
        "@ionic-native/admob-free": "^4.2.1",
        "@ionic-native/core": "3.12.1",
        "@ionic-native/native-audio": "^4.2.1",
        "@ionic-native/splash-screen": "3.12.1",
        "@ionic-native/status-bar": "3.12.1",
        "@ionic/storage": "^2.0.1",
        "cordova-admob-sdk": "^0.8.0",
        "cordova-android": "^6.2.3",
        "cordova-ios": "^4.4.0",
        "cordova-plugin-admob-free": "^0.10.0",
        "cordova-plugin-console": "^1.0.5",
        "cordova-plugin-device": "^1.1.4",
        "cordova-plugin-nativeaudio": "^3.0.9",
        "cordova-plugin-splashscreen": "^4.0.3",
        "cordova-plugin-statusbar": "^2.2.2",
        "cordova-plugin-whitelist": "^1.3.1",
        "cordova-promise-polyfill": "0.0.2",
        "cordova-sqlite-storage": "^2.0.4",
        "ionic-angular": "3.6.0",
        "ionic-plugin-keyboard": "^2.2.1",
        "ionicons": "3.0.0",
        "lodash": "^4.17.4",
        "rxjs": "5.4.0",
        "sw-toolbox": "3.6.0",
        "zone.js": "0.8.12"
    },
    "devDependencies": {
        "@ionic/app-scripts": "^3.0.1",
        "license-checker": "^14.0.0",
        "make-dir-cli": "^1.0.0",
        "npm-run-all": "^4.1.1",
        "typescript": "2.3.4"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-console": {},
            "cordova-plugin-device": {},
            "cordova-plugin-splashscreen": {},
            "cordova-plugin-statusbar": {},
            "cordova-plugin-whitelist": {},
            "ionic-plugin-keyboard": {},
            "cordova-plugin-nativeaudio": {},
            "cordova-plugin-admob-free": {},
            "cordova-sqlite-storage": {}
        },
        "platforms": [
            "android",
            "ios"
        ]
    }
}
